<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@mipmap/putinpassword_beijing"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="0dp"
            android:id="@+id/ed_putin_ed1"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_putin_ed2"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_putin_ed3"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_putin_ed4"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_putin_ed5"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:inputType="number"
            android:selectAllOnFocus="true"
            android:maxLength="1"
            android:imeOptions="actionDone|flagNoExtractUi"
            android:gravity="center"
            android:cursorVisible="false"
            android:layout_marginLeft="15dp"
            android:id="@+id/ed_putin_ed6"
            android:background="@mipmap/setpasswor_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_putin_forget_password"
        android:layout_marginTop="5dp"
        android:text="忘记提现密码！"
        android:textColor="#84E7F9"
        android:layout_marginRight="-150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_putin_mimacuowu"
        android:textColor="#FFCE78"
        android:textSize="15dp"
        android:layout_marginTop="15dp"
        android:text="密码错误请重新输入！"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />



</LinearLayout>
