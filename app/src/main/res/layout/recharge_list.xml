<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/rl_recharge_list"
    android:background="@mipmap/tv_recharge_czjl"
    android:layout_height="wrap_content">

    <TextView
        android:layout_marginLeft="5dp"
        android:textColor="#B2E7FF"
        android:layout_centerVertical="true"
        android:id="@+id/recharge_list_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:textColor="#E6A62C"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:id="@+id/recharge_list_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:paddingRight="5dp"
        android:layout_marginRight="10dp"
        android:textColor="#B2E7FF"
       android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:id="@+id/recharge_list_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />




</RelativeLayout>
