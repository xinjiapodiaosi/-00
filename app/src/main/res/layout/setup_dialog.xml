<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bcg_setup_beijing"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/bt_setup_xx"
        android:layout_marginTop="10dp"
        android:layout_marginRight="15dp"
        android:layout_gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/xx" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:text="音乐开关"
                android:textColor="#6ECCF5"
                android:textSize="16dp" />


            <com.meiji.ysj.youxidating.view.SwitchButton
                android:layout_marginLeft="30dp"
                android:id="@+id/sb_setup_yingyue"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />



        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:text="振动开关"
                android:textColor="#6ECCF5"
                android:textSize="16dp" />


            <com.meiji.ysj.youxidating.view.SwitchButton
                android:layout_marginLeft="30dp"
                android:id="@+id/sb_setup_zhengdong"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-20dp"
                android:text="音效开关"
                android:textColor="#6ECCF5"
                android:textSize="16dp" />



            <com.meiji.ysj.youxidating.view.SwitchButton
                android:layout_marginLeft="30dp"
                android:id="@+id/sb_setup_yingxiao"
                android:layout_width="wrap_content"
                android:layout_height="80dp" />


        </LinearLayout>








    </LinearLayout>


</LinearLayout>
